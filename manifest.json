{
    "manifest_version": 3,
    "name": "Disable Picture-in-Picture on NHK Plus",
    "version": "1.0",
    "description": "Disables enterpictureinpicture and leavepictureinpicture events on NHK Plus.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://plus.nhk.jp/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}